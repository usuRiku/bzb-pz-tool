<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/google.css" />
<link rel="stylesheet" href="/stylesheets/line.css" />
<h1 class="text-center">パスワード変更フォーム</h1>
<div class="container mb-3">
    <div class="row">
        <div>
            <div class="center-block col-12 col-md-6 offset-md-3">
                <h3 id = "msg"></h3>
                <form action="<%= resetUrl %>" method="post" class="validation" novalidate>
                    <div>
                        <label for="password" class="col-form-label">新しいパスワード</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                    <div>
                        <label for="password" class="col-form-label">新しいパスワード：確認用</label>
                        <input type="password" id="passwordConform" class="form-control" required>
                    </div>
                    <button class="btn btn-danger my-3" id = "submitButton" type="button" >パスワードを変更</button>
                </form>
            </div>
        </div>
    </div>
<script src="\javascript\auth\resetPassword.js"></script>